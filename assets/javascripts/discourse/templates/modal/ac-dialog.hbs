{{#d-modal-body id="invite-modal" title=title}}
    <h1 class="ac-header">Explore these options while you wait for responses...</h1>

    <div class="ac-options">
      <div class="ac-posts">
        <h2>{{ model.apt_crowd_request.posts.length }} Conversations</h2>
        <p>discuss related topics</p>

        <ul>
          {{#each model.apt_crowd_request.posts as |post|}}
            <li>
              <h3>{{post.title}}</h3>
              <p>{{{post.preview_html}}}</p>
              {{d-button action="show_post" label="ac_dialog.show_post_label" actionParam=post.post_url}}
            </li>
          {{/each}}
        </ul>
      </div>

      <div class="ac-peers">
        <h2>{{ model.apt_crowd_request.peers.length }} Experts</h2>
        <p>have relevant experience</p>

        <ul>
          {{#each model.apt_crowd_request.peers as |peer|}}
            <li>
              <img src="{{peer.avatar_url}}"/>
              <h3>{{peer.author}}</h3>
              <p>
                {{#each peer.skills as |skill|}}
                  {{skill}}{{#unless (eq skill peer.skills.lastObject)}},{{/unless}}
                {{/each}}
              </p>
              <a target="_blank" href="/apt_crowd">Invite to Topic</a>
              {{d-button action="show_activity" label="ac_dialog.show_user_activity_label" actionParam=peer.author_id}}
              <button class="btn" {{action "invite_peer" model.id peer.author_id}}>Invite to Topic</button>
            </li>
          {{/each}}
        </ul>
      </div>

      <div class="ac-vendors">
        <h2>{{ model.apt_crowd_request.vendors.length }} Partners</h2>
        <p>are able to help</p>

        <ul>
          {{#each model.apt_crowd_request.vendors as |vendor|}}
            <li>
              <img src="{{vendor.logo_url}}"/>
              <h3>{{vendor.name}}</h3>
              <p>{{{vendor.preview_html}}}</p>
              <a target="_blank" href="{{vendor.website}}">View Website</a>
              <a target="_blank" href="#">Contact Vendor</a>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
{{/d-modal-body}}

<div class="modal-footer">
  {{d-button action="silence" label="ac_dialog.ok_button" actionParam=model.id}}
</div>
